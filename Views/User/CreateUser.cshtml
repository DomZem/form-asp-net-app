@model form_asp_net_app.Models.User

<section class="w-50 shadow-sm p-3 rounded">
    <h4 class="text-center">Create user</h4>

    <form asp-action="CreateUser" class="d-flex flex-column gap-3" method="post">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter Name">
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Surname">Surname</label>
            <input asp-for="Surname" class="form-control" placeholder="Enter Surname">
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Surname)
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Age">Age</label>
            <input asp-for="Age" type="number" class="form-control" placeholder="Enter age">
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Age)
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Email">Address email</label>
            <input asp-for="Email" type="email" class="form-control" placeholder="Enter address email">
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Phone">Phone number</label>
            <input asp-for="Phone" type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{3}" class="form-control" placeholder="Enter phone number">
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Phone)
            </div>
        </div>

        <div class="form-group">
            <label asp-for="City">City</label>
            <select asp-for="City" asp-items="Html.GetEnumSelectList<City>()" class="form-select" aria-label="Default select example">
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter password">
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Password)
            </div>
        </div>

        <div class="form-group">
            <label asp-for="RepeatPassword">Repeat password</label>
            <input asp-for="RepeatPassword" type="password" class="form-control" placeholder="Enter repeat password">
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.RepeatPassword)
            </div>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="flex-fill btn btn-primary">Submit</button>
            <button type="reset" class="flex-fill btn btn-secondary">Reset</button>
        </div>
    </form>
</section>
